<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="#000000"
    android:scrollbars="none">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <TableRow>

            <Spinner
                android:id="@+id/cmbBondedDevices"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="2"
                android:layout_weight="1" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swtConnect"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_span="2"
                android:layout_weight="1"
                android:foregroundTint="#ffffff"
                android:text="Connect"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow android:paddingBottom="6dp">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnPower"
                    style="@style/half_button_style"
                    android:backgroundTint="#000000"
                    app:icon="@drawable/power"
                    app:iconSize="96dp"
                    app:iconTint="#ffffff" />

                <Button
                    android:id="@+id/btnPair"
                    style="@style/half_button_style"
                    android:text="ðŸ“¶"
                    android:visibility="invisible" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUp"
                style="@style/full_button_style"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="#000000"
                app:elevation="0dp"
                app:icon="@drawable/arrowup"
                app:iconPadding="0dp"
                app:iconSize="96dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#FFFFFF" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnMenu"
                    style="@style/half_button_style"
                    android:backgroundTint="#000000"
                    app:icon="@drawable/settings"
                    app:iconSize="48dp"
                    app:iconTint="#ffffff" />

                <Button
                    android:id="@+id/btnMute"
                    style="@style/half_button_style"
                    android:backgroundTint="#000000"
                    app:icon="@drawable/volume_off"
                    app:iconSize="48dp"
                    app:iconTint="#ffffff" />

            </LinearLayout>

        </TableRow>

        <TableRow android:paddingBottom="6dp">

            <Button
                android:id="@+id/btnLeft"
                style="@style/full_button_style"
                android:background="@null"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/arrowleft"
                app:iconSize="96dp"
                app:iconTint="#ffffff"
                app:rippleColor="@null"
                app:strokeColor="#ffffff" />

            <Button
                android:id="@+id/btnMiddle"
                style="@style/full_button_style"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/button"
                app:iconSize="96dp"
                app:iconTint="#FFFFFF"
                app:rippleColor="@null"
                app:strokeColor="#ffffff" />

            <Button
                android:id="@+id/btnRight"
                style="@style/full_button_style"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/arrowright"
                app:iconSize="96dp"
                app:iconTint="#FFFFFF"
                app:strokeColor="#FFFFFF" />
        </TableRow>

        <TableRow android:paddingBottom="6dp">

            <Button
                android:id="@+id/btnHome"
                style="@style/full_button_style"
                android:background="@null"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingBottom="6dp"
                app:icon="@drawable/home"
                app:iconSize="96dp"
                app:iconTint="#ffffff"
                app:rippleColor="@null"
                app:strokeColor="#ffffff" />

            <Button
                android:id="@+id/btnDown"
                style="@style/full_button_style"
                android:background="@null"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/arrowdown"
                app:iconSize="96dp"
                app:iconTint="#ffffff"
                app:rippleColor="@null"
                app:strokeColor="#ffffff" />

            <Button
                android:id="@+id/btnBack"
                style="@style/full_button_style"
                android:background="@null"
                android:backgroundTint="#000000"
                android:paddingBottom="6dp"
                app:icon="@drawable/back"
                app:iconSize="96dp"
                app:iconTint="#ffffff"
                app:strokeColor="#ffffff" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnRewind"
                style="@style/full_button_style"
                android:backgroundTint="#000000"
                app:icon="@drawable/rewind"
                app:iconSize="96dp"
                app:iconTint="#ffffff" />

            <Button
                android:id="@+id/btnForward"
                style="@style/full_button_style"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:rotationY="180"
                app:icon="@drawable/rewind"
                app:iconSize="96dp"
                app:iconTint="#ffffff" />

            <Button
                android:id="@+id/btnPlayPause"
                style="@style/full_button_style"
                android:backgroundTint="#000000"
                android:insetTop="0dp"
                app:icon="@drawable/play_pause"
                app:iconSize="96dp"
                app:iconTint="#ffffff" />

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnVolInc"
                    style="@style/half_button_style"
                    android:backgroundTint="#000000"
                    app:icon="@drawable/volume_up"
                    app:iconSize="46dp"
                    app:iconTint="#ffffff" />

                <Button
                    android:id="@+id/btnVolDec"
                    style="@style/half_button_style"
                    android:backgroundTint="#000000"
                    app:icon="@drawable/volume_down"
                    app:iconSize="46dp"
                    app:iconTint="#ffffff" />

            </LinearLayout>

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/txtInput"
                android:layout_span="2"
                android:layout_weight="1"
                android:hint="Type text here to send."
                android:inputType="text" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txtOut"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_span="4"
                android:layout_weight="1" />
        </TableRow>


    </TableLayout>


</ScrollView>